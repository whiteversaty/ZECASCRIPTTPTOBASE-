---------------------------------------------------------
-- üîß FUN√á√ÉO ESP
---------------------------------------------------------
local function applyESP(state)
    for _, plr in pairs(game.Players:GetPlayers()) do
        if plr ~= player then
            local char = plr.Character
            if char and char:FindFirstChild("HumanoidRootPart") then
                if state then
                    if not char:FindFirstChild("ZecaESP") then
                        local esp = Instance.new("BillboardGui", char)
                        esp.Name = "ZecaESP"
                        esp.Size = UDim2.new(0,100,0,30)
                        esp.Adornee = char.HumanoidRootPart
                        esp.AlwaysOnTop = true

                        local txt = Instance.new("TextLabel", esp)
                        txt.Size = UDim2.new(1,0,1,0)
                        txt.BackgroundTransparency = 1
                        txt.Text = plr.Name
                        txt.TextColor3 = Color3.fromRGB(255, 60, 80)
                        txt.Font = Enum.Font.GothamBold
                        txt.TextSize = 14
                    end
                else
                    if char:FindFirstChild("ZecaESP") then
                        char.ZecaESP:Destroy()
                    end
                end
            end
        end
    end
end

---------------------------------------------------------
-- üîÜ SATURA√á√ÉO (ColorCorrectionEffect) - MEIO termo (+0.8)
---------------------------------------------------------
local colorEffect
local function ativarSaturacao()
    local Lighting = game:GetService("Lighting")
    if not colorEffect then
        colorEffect = Instance.new("ColorCorrectionEffect")
        colorEffect.Name = "ZecaSaturacao"
        colorEffect.Saturation = 0.8  -- MEIO termo: mais colorido que normal, mas n√£o exagerado
        colorEffect.Parent = Lighting
    else
        colorEffect.Saturation = 0.8
        colorEffect.Enabled = true
    end
end

local function desativarSaturacao()
    if colorEffect then
        colorEffect.Enabled = false
    end
end

---------------------------------------------------------
-- üéØ FOV
---------------------------------------------------------
local function ativarFOV()
    local cam = workspace.CurrentCamera
    cam.FieldOfView = 90
end

local function desativarFOV()
    local cam = workspace.CurrentCamera
    cam.FieldOfView = defaultFov
end

---------------------------------------------------------
-- üíª OTIMIZAR ROBLOX (otimiza√ß√£o e revers√£o completa)
---------------------------------------------------------
local function otimizarAtivar()
    otimizaBackup = {}
    for _, v in ipairs(workspace:GetDescendants()) do
        if v:IsA("ParticleEmitter") or v:IsA("Trail") then
            otimizaBackup[v] = v.Enabled
            v.Enabled = false
        elseif v:IsA("PointLight") or v:IsA("SpotLight") or v:IsA("SurfaceLight") then
            otimizaBackup[v] = v.Enabled
            v.Enabled = false
        end
    end

    for _, v in ipairs(workspace:GetDescendants()) do
        if v:IsA("Explosion") then
            v:Destroy()
        end
    end

    local l = game.Lighting
    for _,effect in ipairs({"BlurEffect","SunRaysEffect","BloomEffect","DepthOfFieldEffect","ColorCorrectionEffect"}) do
        for _,inst in ipairs(l:GetChildren()) do
            if inst.ClassName == effect and inst.Name ~= "ZecaSaturacao" then
                inst:Destroy()
            end
        end
    end
    l.Brightness = 1
    l.FogEnd = 1e5
    l.TimeOfDay = "14:00:00"
    l.OutdoorAmbient = Color3.fromRGB(64,64,64)

    local t = workspace:FindFirstChildOfClass("Terrain")
    if t then t.Decorations = false end
end

local function otimizarDesativar()
    for obj,valor in pairs(otimizaBackup) do
        if obj and obj.Parent then
            obj.Enabled = valor
        end
    end
    otimizaBackup = {}

    local t = workspace:FindFirstChildOfClass("Terrain")
    if t then t.Decorations = true end
end

---------------------------------------------------------
-- BOT√ïES -----------------------------------------------
espBtn.MouseButton1Click:Connect(function()
    espEnabled = not espEnabled
    espBtn.Text = espEnabled and "ESP: ON" or "ESP: OFF"
    applyESP(espEnabled)
end)

saveBtn.MouseButton1Click:Connect(function()
    local root = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
    if root then
        savedPos = root.CFrame
        msg.Text = "Base salva!"
    end
end)

tpBtn.MouseButton1Click:Connect(function()
    if savedPos then
        local root = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
        if root then
            root.CFrame = savedPos
            msg.Text = "Teleportado!"
        end
    else
        msg.Text = "Nenhuma base salva!"
    end
end)

fovBtn.MouseButton1Click:Connect(function()
    fovEnabled = not fovEnabled
    if fovEnabled then
        fovBtn.Text = "FOV: 90"
        fovBtn.BackgroundColor3 = Color3.fromRGB(30,200,140)
        ativarFOV()
        msg.Text = "FOV aumentado para 90!"
    else
        fovBtn.Text = "FOV: OFF"
        fovBtn.BackgroundColor3 = Color3.fromRGB(100,90,255)
        desativarFOV()
        msg.Text = "FOV restaurado!"
    end
end)

satBtn.MouseButton1Click:Connect(function()
    satEnabled = not satEnabled
    if satEnabled then
        satBtn.Text = "Satura√ß√£o: ON"
        satBtn.BackgroundColor3 = Color3.fromRGB(100,200,40)
        ativarSaturacao()
        msg.Text = "Satura√ß√£o m√©dia ativada!"
    else
        satBtn.Text = "Satura√ß√£o: OFF"
        satBtn.BackgroundColor3 = Color3.fromRGB(255,143,34)
        desativarSaturacao()
        msg.Text = "Satura√ß√£o restaurada!"
    end
end)

optBtn.MouseButton1Click:Connect(function()
    otimizaEnabled = not otimizaEnabled
    if otimizaEnabled then
        optBtn.Text = "Otimizar: ON"
        optBtn.BackgroundColor3 = Color3.fromRGB(255,209,69)
        otimizarAtivar()
        msg.Text = "Otimiza√ß√£o padr√£o Roblox ativada!"
    else
        optBtn.Text = "Otimizar: OFF"
        optBtn.BackgroundColor3 = Color3.fromRGB(0,180,80)
        otimizarDesativar()
        msg.Text = "Otimiza√ß√£o revertida!"
    end
end)
